<%- include('../includes/head.ejs') %>

    <body class="animsition">

        <!-- Header -->
        <%- include('../includes/header.ejs') %>


            <!-- Title page -->
            <section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image:  url(/images/avatar.jpg) ">
                <h2 class="ltext-105 cl0 txt-center" style='color: white'>
                    Account
                </h2>
            </section>
            <!-- Content page -->
            <section class="bg0 p-t-104 p-b-116">
                <div class="container">
                    <% if (errorMessage && error=='true' ) { %>
                        <div class="checkout-message user-message--error m-b-20">
                            <%= errorMessage %>
                        </div>
                        <% } %>
                            <% if(errorMessage && error=='false' ){ %>
                                <div class="checkout-message checkout-message--success m-b-20">
                                    <%= errorMessage %>
                                </div>
                                <% } %>
                                    <div class="flex-w flex-tr justify-content-center">

                                        <div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md">
                                            <p class="title-changepassword" style="margin: 20px 0 20px 0;
                            font-size: 20px;
                            background-color: #4df1ea;
                            color: #2c3ff1;">
                                                Information
                                            </p>
                                            <form method="POST" action="/account">
                                                <input type="hidden" value="<%= currentUser._id %>" name="_id" id="_id">
                                                <span class="mtext-110 cl2 ">
                                                    FullName
                                                </span>
                                                <div class="bor8 m-b-20 how-pos4-parent">
                                                    <div class="stext-110 cl2 plh3 size-112 p-l-10 p-r-10 w-full">
                                                        <div class="account-input">
                                                            <input type="text" name="fullname" id="fullname"
                                                                class="form-control account-input-detail"
                                                                placeholder="FullName"
                                                                value="<%= currentUser.fullname %>">
                                                        </div>
                                                    </div>
                                                </div>
                                                <span class="mtext-110 cl2 ">
                                                    Age
                                                </span>
                                                <div class="bor8 m-b-20 how-pos4-parent">
                                                    <div class="stext-110 cl2 plh3 size-112 p-l-10 p-r-10 w-full">
                                                        <div class="account-input">
                                                            <input type="text" name="age" id="age"
                                                                class="form-control account-input-detail"
                                                                placeholder="age" value="<%= currentUser.age %>">
                                                        </div>
                                                    </div>
                                                </div>

                                                <span class="mtext-110 cl2 ">
                                                    Email
                                                </span>
                                                <div class="bor8 m-b-20 how-pos4-parent">
                                                    <div class="stext-110 cl2 plh3 size-112 p-l-10 p-r-10 w-full">
                                                        <div class="account-input">
                                                            <input type="text" name="email" id="email"
                                                                class="form-control account-input-detail"
                                                                placeholder="Email" value="<%= currentUser.email %>">
                                                        </div>
                                                    </div>
                                                </div>
                                                <span class="mtext-110 cl2 ">
                                                    Phone
                                                </span>
                                                <div class="bor8 m-b-20 how-pos4-parent">
                                                    <div class="stext-110 cl2 plh3 size-112 p-l-10 p-r-10 w-full">
                                                        <div class="account-input">
                                                            <input type="text" name="phone" id="phone"
                                                                class="form-control account-input-detail"
                                                                placeholder="Phone" value="<%= currentUser.phone %>">
                                                        </div>
                                                    </div>
                                                </div>
                                                <span class="mtext-110 cl2 ">
                                                    Address
                                                </span>
                                                <div class="bor8 m-b-20 how-pos4-parent">
                                                    <div class="stext-110 cl2 plh3 size-112 p-l-10 p-r-10 w-full">
                                                        <div class="account-input">
                                                            <input type="text" name="address" id="address"
                                                                class="form-control account-input-detail"
                                                                placeholder="address"
                                                                value="<%= currentUser.address %>">
                                                        </div>
                                                    </div>
                                                </div>
                                                <button type="submit" class="btn btn-success">Save
                                                    <i class="fa fa-upload" aria-hidden="true"></i>
                                                </button>
                                            </form>

                                            <p class="title-changepassword" style="margin: 20px 0 20px 0;
                            font-size: 20px;
                            background-color: #4df1ea;
                            color: #2c3ff1;">
                                                Change Password
                                            </p>

                                            <form method="POST" action="/change-password">
                                                <input type="hidden" value="<%= currentUser._id %>" name="_id" id="_id">
                                                <span class="mtext-110 cl2 ">
                                                    Old Password
                                                </span>
                                                <div class="bor8 m-b-20 how-pos4-parent">
                                                    <div class="stext-110 cl2 plh3 size-112 p-l-10 p-r-10 w-full">
                                                        <div class="account-input">
                                                            <input type="password" name="oldpw" id="oldpw"
                                                                class="form-control account-input-detail"
                                                                placeholder="Old Password">
                                                        </div>
                                                    </div>
                                                </div>
                                                <span class="mtext-110 cl2 ">
                                                    New Password
                                                </span>
                                                <div class="bor8 m-b-20 how-pos4-parent">
                                                    <div class="stext-110 cl2 plh3 size-112 p-l-10 p-r-10 w-full">
                                                        <div class="account-input">
                                                            <input type="password" name="newpw" id="newpw"
                                                                class="form-control account-input-detail"
                                                                placeholder="New Password">
                                                        </div>
                                                    </div>
                                                </div>

                                                <span class="mtext-110 cl2 ">
                                                    Confirm New Password
                                                </span>
                                                <div class="bor8 m-b-20 how-pos4-parent">
                                                    <div class="stext-110 cl2 plh3 size-112 p-l-10 p-r-10 w-full">
                                                        <div class="account-input">
                                                            <input type="password" name="cnpw" id="cnpw"
                                                                class="form-control account-input-detail"
                                                                placeholder="Confirm New Password">
                                                        </div>
                                                    </div>
                                                </div>
                                                <button type="submit" class="btn btn-success">Save
                                                    <i class="fa fa-upload" aria-hidden="true"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                </div>
            </section>

            <!-- Map -->
            <div class="map">
                <div class="size-303" id="google_map" data-map-x="40.691446" data-map-y="-73.886787"
                    data-pin="images/icons/pin.png" data-scrollwhell="0" data-draggable="1" data-zoom="11"></div>
            </div>

            <%- include('../includes/footer.ejs') %>

                <!-- Back to top -->
                <div class="btn-back-to-top" id="myBtn">
                    <span class="symbol-btn-back-to-top">
                        <i class="zmdi zmdi-chevron-up"></i>
                    </span>
                </div>
            <%- include('../includes/end.ejs') %>